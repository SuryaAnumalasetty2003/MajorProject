  },

  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyHereWhichIsAtLeast32CharLong",
    "Issuer": "ParkingSystemAPI",
    "Audience": "ParkingSystemClient",
    "ExpiryMinutes": 120
